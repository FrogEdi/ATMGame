extend layout
block content
  div
    h1 new password
    .row
      form.form-horizontal.col-lg-4.col-lg-offset-4(action='/password', method='POST', role='form')
        .form-group
          .col-lg-12
            input.form-control.input-lg(name='password', type='password', id='password', placeholder='Password')
        .form-group
          .col-lg-12
            input.form-control.input-lg(name='confirmPassword', type='password', id='confirmPassword', placeholder='Password Again')
        if error
          .form-group
            .col-lg-8.col-lg-offset-2.alert.alert-danger
              p #{ error }
        if status
          .form-group
            .col-lg-8.col-lg-offset-2.alert.alert-success
              p #{ status }
        .form-group
          input.col-lg-4.col-lg-offset-4.btn.btn-lg.btn-default(type='submit', value='Submit')
